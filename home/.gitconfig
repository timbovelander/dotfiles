[alias]
  a = add
  b = branch -v
  bd = branch -D
  c = commit
  cl = clone
  co = checkout
  cp = cherry-pick
  d = diff
  f = flow
  ff = flow feature
  ffs = flow feature start
  fff = flow feature finish
  fh = flow hotfix
  fhs = flow hotfix start
  fhf = flow hotfix finish
  fr = flow release
  frs = flow release start
  frf = flow release finish
  fs = flow support
  fss = flow support start
  l = log --pretty=format:'%C(Yellow)[%h]%C(reset)  %C(cyan)[%cd]%C(reset)  %C(blue)[%an]%C(reset)  %C(auto)%D%C(reset)%n%s%n' --date=format:'%d-%m-%Y %H:%M'
  lm = "!git l --author=\"$(git config user.name)\""
  ll = log --pretty=format:'%C(Yellow)[%h]%C(reset)  %C(cyan)[%cd]%C(reset)  %C(blue)[%an]%C(reset)  %C(auto)%D%C(reset)%n%s' --date=format:'%d-%m-%Y %H:%M' --numstat
  llm = "!git ll --author=\"$(git config user.name)\""
  m = merge --no-ff
  pl = pull --rebase=preserve --prune
  ps = "!git push -q || git push -u origin $(git symbolic-ref --short HEAD)"
  r = reset
  rh = reset --hard
  rv = revert --no-commit
  s = status -s
  sh = show
  ss = stash -u
  ssl = stash list
  ssa = stash apply
  ssd = stash drop
  ssp = stash pop
[core]
  excludesfile = ~/.gitignore
[push]
  default = simple
[include]
  path = ~/.gitconfig.local
