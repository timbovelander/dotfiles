[alias]
  a = add
  b = branch -v
  c = commit
  co = checkout
  d = diff
  dt = difftool
  l = log --pretty=format:'%C(Yellow)%h%C(reset) - %C(cyan)%cr%C(reset) : %C(blue)%an%C(reset)%C(auto)%d%C(reset)%n%s%n' --graph
  lm = "!git log --pretty=format:'%C(Yellow)%h%C(reset) - %C(cyan)%cr%C(reset) : %C(blue)%an%C(reset)%C(auto)%d%C(reset)%n%s%n' --graph --abbrev-commit --author=\"$(git config user.name)\""
  pl = pull --prune
  ps = push
  r = revert --no-commit
  s = status
  sh = show
  ss = stash -u
  ssl = stash list
  ssa = stash apply
  ssd = stash drop
  ssp = stash pop
[color]
  ui = auto
[core]
	excludesfile = ~/.gitignore
[diff]
  tool = ediff
  guitool = ediff
[difftool]
  prompt = false
[difftool "ediff"]
  cmd = ~/.scripts/ediff.sh $LOCAL $REMOTE $MERGED
[merge]
  tool = ediff
[mergetool]
  prompt = false
[mergetool "ediff"]
  cmd = ~/.scripts/ediff.sh $LOCAL $REMOTE $MERGED $BASE
  trustExitCode = true
[push]
  default = simple
[user]
  name = Tim Bovelander
  email = tim@timenwietske.nl
